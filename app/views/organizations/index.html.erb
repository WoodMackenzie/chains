<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Index of Organizations</h4>
  </div>
  <div class="panel-body">
    <a href="/organizations/new" class="btn btn-success active" role="button">Create New Organization</a>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Organization</th>
          <th>Last Updated By</th>
          <th>Last Updated</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @organizations.each do |organization| %>
          <tr>
            <td><%= organization.latest_historical_name(Time.now) %></td>
            <td><%= User.find(organization.user_id).full_name %></td>
            <td><%= time_ago_in_words(organization.updated_at) %> ago</td>
            <td><%= link_to 'Show', 
              organization, 
              html_options = {class: 'btn btn-primary active'} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>    
  </div>
</div>