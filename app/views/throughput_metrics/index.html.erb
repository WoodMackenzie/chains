<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Index of Types of Throughput</h4>
  </div>
  <div class="panel-body">
    <a href="/throughput_metrics/new" class="btn btn-success active" role="button">Create New Type of Throughput</a>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Type of Throughput</th>
          <th>Last Updated By</th>
          <th>Last Updated</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @throughput_metrics.each do |throughput_metric| %>
          <tr>
            <td><%= throughput_metric.description %></td>
            <td><%= User.find(throughput_metric.user_id).full_name %></td>
            <td><%= time_ago_in_words(throughput_metric.updated_at) + " ago" %></td>
            <td><%= link_to 'Show', 
              throughput_metric, 
              html_options = {class: 'btn btn-primary active'} %></td>
            <td><%= link_to 'Edit', 
              edit_throughput_metric_path(throughput_metric), 
              html_options = {class: 'btn btn-warning active'} %></td>
            <td><%= link_to 'Destroy', 
              throughput_metric, method: :delete, class: 'btn btn-danger active',
              data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>    
  </div>
</div>