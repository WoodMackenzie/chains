<%= simple_form_for(@name) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nameable_id %>
    <%= f.input :nameable_type %>
    <%= f.input :user_id %>
    <%= f.input :active_date %>
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
