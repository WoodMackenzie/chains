<h1>Listing names</h1>

<table>
  <thead>
    <tr>
      <th>Target</th>
      <th>Target type</th>
      <th>User</th>
      <th>Active date</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @names.each do |name| %>
      <tr>
        <td><%= name.target_id %></td>
        <td><%= name.target_type %></td>
        <td><%= name.user_id %></td>
        <td><%= name.active_date %></td>
        <td><%= name.name %></td>
        <td><%= link_to 'Show', name %></td>
        <td><%= link_to 'Edit', edit_name_path(name) %></td>
        <td><%= link_to 'Destroy', name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

