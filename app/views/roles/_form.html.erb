<div class="panel-body">
  <%= simple_form_for(@role) do |f| %>
    <%= f.error_notification %>
    <%= f.input :role, 
      wrapper_html: { class: 'form-group' },
      input_html: { class: 'form-control' } %>
    <%= f.button :submit,
      label: "Create New Role",
      class: 'btn btn-success' %>
  <% end %>
</div>