<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Canonical Measurement Type</h4>
    </div>
    <div class="panel-body">
      <div class="form">
        <div class="form-group">
          <label>Unit of Measurement:</label>
          <p class="form-control-static">
            <%= @units_of_measure.description %>
          </p>
        </div>
        <div class="form-group">
          <label>Measurement Type:</label>
          <p class="form-control-static">
            <%= MeasureType.find(@units_of_measure.measure_type_id).description %>
          </p>
        </div>
        <div class="form-group">
          <label>Last Updated By:</label>
          <p class="form-control-static">
            <%= User.find(@units_of_measure.user_id).full_name %>
          </p>
        </div>
        <div class="form-group">
          <label>Last Updated:</label>
          <p class="form-control-static">
            <%= time_ago_in_words(@units_of_measure.updated_at) + " ago" %>
          </p>
        </div>
      </div>
      <div class="btn-toolbar">
        <div class="btn-group">
          <%= button_to 'Edit', edit_units_of_measure_path(@units_of_measure),
            class: 'btn btn-warning active',
            method: :get %>
        </div> 
        <div class="btn-group">
          <%= button_to 'Back', units_of_measures_path,
            class: 'btn btn-primary active',
            method: :get %>
        </div>
        <div class="btn-group">    
          <%= button_to 'Destroy', @units_of_measure,
            method: :delete,
            class: 'btn btn-danger active',
            data: { confirm: 'Are you sure?  This will also delete any names, comments, and role assignments that go along with this organization.' } %>
        </div>
      </div>
    </div>
  </div>
</div>