<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Sign in</h4>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          
          <%= f.input :email, :required => false, :autofocus => true,
            wrapper_html: { class: 'form-group'},
            input_html: { class: 'form-control', placeholder: "Enter E-mail Address"} %>
          <%= f.input :password, :required => false,
            wrapper_html: { class: 'form-group'},
            input_html: { class: 'form-control', placeholder: "Enter Password"} %>

          <%= f.input :remember_me, 
            wrapper_html: { class: 'checkbox'},
            label: false,
            inline_label: "Remember me",
            :as => :boolean if devise_mapping.rememberable? %>

          <%= f.button :submit, "Sign in", class: 'btn btn-primary' %>

      <% end %>

      <br />

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>